<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingBottom="10dp"
    android:id="@+id/menuItem"
    >

    <ImageView
        android:id="@+id/menuItemIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"

        app:tint="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_compose" />

    <TextView
        android:id="@+id/txtMenuItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"

        android:text="Viết bài viết"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/menuItemIcon"
        app:layout_constraintStart_toEndOf="@+id/menuItemIcon"
        app:layout_constraintTop_toTopOf="@+id/menuItemIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>